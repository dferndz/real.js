{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "outDir": "./build",
    "lib": ["es5"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "preserve"
  },
  "include": ["./src/**/*"]
}
